			<param name="ConversionPattern" value="%m%n" />
		</layout>
	</appender>
	<logger name="com.heishi.log.bean.GoodUseAndDeleteLog">
		<level value="error" />
		<appender-ref ref="GoodUseAndDeleteLogFileAppender" />
	</logger>
	
	<appender name="JJCFightSWLogFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/log/analysis/JJCFightSWLog/JJCFightSWLog.txt" />
		<param name="DatePattern" value="'.'yyyyMMdd" />
