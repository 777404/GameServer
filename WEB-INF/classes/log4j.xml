<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd"><log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">


		<param name="Target" value="System.out" />
		<param name="Threshold" value="ALL" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d][%p,%c{1}] %m%n" />
		</layout>      <filter class="org.apache.log4j.varia.LevelRangeFilter">  
            <param name="levelMin" value="debug" />  
           <param name="levelMax" value="error" />  
           <param name="AcceptOnMatch" value="true" />  
       </filter>  
	</appender>
	<appender name="FileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/log/logs/gameserver.log" />
		<param name="Threshold" value="ALL" />
		<param name="DatePattern" value="'.'yyyyMMddHH" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{HH:mm:ss} %p][%c]%m%n" />
		</layout>
	</appender>
	
	<!-- 跨服信息分析日志 -->
	<appender name="AcrossInfoLogFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/log/analysis/across/acrossInfoLog.txt" />
		<param name="DatePattern" value="'.'yyyyMMdd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n" />
		</layout>
	</appender>
	
	<appender name="AcrossTransDataLogFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/log/analysis/across/acrossTransDataLog.txt" />
		<param name="DatePattern" value="'.'yyyyMMdd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n" />
		</layout>
	</appender>
	
	<!-- 物品add日志分析 -->
	<appender name="GoodUseAndAddFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/log/analysis/GoodUseAndAdd/GoodUseAndAdd.txt" />
		<param name="DatePattern" value="'.'yyyyMMdd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n" />
		</layout>
	</appender>
	<logger name="com.heishi.log.bean.GoodUseAndAddLog">
		<level value="error" />
		<appender-ref ref="GoodUseAndAddFileAppender" />
	</logger>

	<appender name="GoodUseAndDeleteLogFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/log/analysis/GoodUseAndDeleteLog/GoodUseAndDeleteLog.txt" />
